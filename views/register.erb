<!DOCTYPE html>
<html>
<head>
  <title>Trivia | Registro</title>
  <link rel="stylesheet" type="text/css" href="/css/register.css">
</head>
<body>
  <h1>Ingrese sus datos para registrarse</h1>
  <form action="/registrarse" method="post">
    <div class="form-group">
      <label for="username">Usuario:</label>
      <input type="text" id="username" name="username" required>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="password">Contrase침a:</label>
      <div class="password-container">
        <input type="password" id="password" name="password" required>
        <span class="show-password" onclick="passwordVisibility('password')">Ver</span>
      </div>
    </div>
    <div class="form-group">
      <label for="confirm_password">Confirmar contrase침a:</label>
      <div class="password-container">
        <input type="password" id="confirm_password" name="confirm_password" required>
        <span class="show-password" onclick="passwordVisibility('confirm_password')">Ver</span>
      </div>
    </div>
    <input type="submit" value="Registrarse">
  </form>
  <script>
    /* Funci칩n para visualizar la contrase침a escrita */
    function passwordVisibility(passId) {
      var passInput = document.getElementById(passId);
      if (passInput.type === "password") {
        passInput.type = "text";
      } else {
        passInput.type = "password";
      }
    }
  </script>
</body>
</html>